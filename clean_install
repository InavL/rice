# clean install 
sudo apt-get upgrade --fix-missing
sudo apt-get update

# terminator, zsh and oh-my-zsh setup
sudo apt-get install zsh terminator
chsh -s $(which zsh)
# relaunch terminator
sh -c "$(wget https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
# paste .zshrc

# main software
sudo apt-get install chromium-browser vlc thunar ranger htop cmatrix neofetch redshift play-on-linux steam rofi dmenu compton scrot feh maim dunst lxappearance git
# includes the following:
# chromium-browser
# vlc
